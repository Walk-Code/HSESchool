<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
	<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >
        <EditText
	        android:id="@+id/edittext_title"
	        android:background="@drawable/nulls"
	        android:layout_width="match_parent"
	    	android:layout_height="40dp"
	    	android:padding="10dp"
	    	android:singleLine="true"
	    	android:textSize="15dp"
	    	android:textColor="#4a4a4a"
	    	android:textColorHint="#a8a8a8"
	    	android:hint="@string/publish_title"/>
        <View
	        android:layout_width="match_parent"
	    	android:layout_height="0.5dp"
	    	android:background="#c8c8c8"/>
        <EditText
	        android:id="@+id/edittext_content"
	        android:background="@drawable/nulls"
	        android:layout_width="match_parent"
	    	android:layout_height="110dp"
	    	android:padding="10dp"
	    	android:lineSpacingExtra="2dp"
	    	android:singleLine="false"
	    	android:textSize="15dp"
	    	android:textColor="#4a4a4a"
	    	android:textColorHint="#a8a8a8"
	    	android:gravity="top"
	    	android:lines="20"
	    	android:hint="@string/publish_content"/>
        <com.util.StaticGridView
	        android:id="@+id/public_gridView"
	        android:layout_width="match_parent"  
	        android:layout_height="wrap_content"
	        android:verticalSpacing="10dp"
	        android:numColumns="4"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="10dp"
	        android:scrollbars="none"
	        android:stretchMode="columnWidth"
	        android:gravity="center"/>
        <View  
	        android:layout_width="match_parent"
	    	android:layout_height="0.5dp"
	    	android:background="#c8c8c8"/>
   	</LinearLayout>
   	</ScrollView>
	<LinearLayout
   	    android:id="@+id/public_bottom_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    android:orientation="vertical" >
	    <View
	        android:layout_width="match_parent"
		    android:layout_height="0.7dp"
		    android:background="#cacaca"/>
        <RelativeLayout
            android:id="@+id/public_emojiview_relayout"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="#f8f8f8">
            <View
                android:id="@+id/public_emojiview"
		        android:layout_width="38dp"
			    android:layout_height="38dp"
			    android:layout_marginLeft="10dp"
			    android:layout_centerVertical="true"
			    android:layout_alignParentLeft="true"
			    android:background="@drawable/btn_expression"/>
        </RelativeLayout>
        <View
	        android:layout_width="match_parent"
		    android:layout_height="0.7dp"
		    android:background="#cacaca"/>
        
        <LinearLayout
    	    android:id="@+id/public_emoji_layout"
		    android:layout_width="wrap_content"
		    android:layout_height="180dp"
		    android:visibility="gone"
		    android:orientation="vertical" >
			<fragment
		        android:id="@+id/emoji_fragment"
		        android:name="com.layout.emoji.EmojiFragment"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1" />		
		</LinearLayout>
    </LinearLayout>
</FrameLayout>
