<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
		 <ImageView
                   android:id="@+id/guess_im"
                   android:layout_width="match_parent"
                   android:layout_height="140dp"
                   android:src="@drawable/previewpic"
                   android:layout_gravity="center"
                   android:scaleType="fitXY" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="left"
                   android:singleLine="true"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_marginTop="3dp"
                   android:id="@+id/store_home_like_goods_names"/>
           
                 <LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:gravity="center_vertical">				    
	                 <TextView	                     
                        android:id="@+id/store_home_like_goods_prices" 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#DE544F"
                        android:textSize="13dp"
                        android:layout_marginRight="10dp"/>
	                <TextView
	                    android:id="@+id/product_markPrice"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="11dp"
	                    android:textColor="#BEBEBE"/>
	                <TextView                     
                        android:id="@+id/store_goods_sum" 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="#9A9A9A"
                        android:textSize="13dp"/> 
				</LinearLayout> 
	</LinearLayout>
