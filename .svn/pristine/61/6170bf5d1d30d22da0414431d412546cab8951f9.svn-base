<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- <View
        android:id="@+id/listcell_poll_child_colorview"
        android:layout_width="5dp"
        android:background="#f12345"
        android:visibility="gone"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"/> -->
    <EditText
        android:id="@+id/edittext"
        android:background="@drawable/inputbox"
        android:layout_width="match_parent"
    	android:layout_height="100dp"
    	android:padding="5dp"
    	android:singleLine="false"
    	android:textSize="16dp"
    	android:textColor="#444444"
    	android:textColorHint="#c3c3c3"
    	android:visibility="gone"
    	android:hint="@string/customcomment_hint"
    	android:gravity="left"/>
    
    <View
        android:id="@+id/view_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/radioflase"
        android:layout_marginTop="3dp"/>
    
    <TextView 
	    android:id="@+id/textview_name"
	    android:layout_toRightOf="@id/view_check"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="left|center_vertical"
		android:layout_centerVertical="true"
		android:paddingLeft="5dp"
		android:paddingRight="10dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:textSize="15dp"
		android:textColor="#333333"/>
</RelativeLayout>