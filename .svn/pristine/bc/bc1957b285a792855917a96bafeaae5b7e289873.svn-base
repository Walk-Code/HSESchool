<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
 	    android:layout_width="match_parent"
 	    android:layout_height="112dp"
 	    android:orientation="vertical"
 	    android:layout_gravity="center_vertical"
 	    android:id="@+id/store_order_layout"
 	    android:gravity="center_vertical"
 	    android:background="#ffffff"> 
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="14dp">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="收货人:"
	            android:textSize="16dp"
	            android:layout_centerVertical="true"
	            android:gravity="center"
	            android:id="@+id/store_consignee"/>
	         <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="132"
	            android:textSize="16dp"
	           	android:layout_alignParentRight="true"
	           	android:layout_centerVertical="true"
	           	android:id="@+id/store_consignee_phone"/>                
	    </RelativeLayout>
		<RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="14dp"
	        android:layout_marginTop="20dp"
	        android:layout_gravity="center_vertical">
	        <ImageView
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:src="@drawable/icon_location"
	            android:layout_centerVertical="true"
	            android:gravity="center"
	            android:id="@+id/icon_location"
	            android:background="#000000"/>
	         <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="132"
	            android:textSize="16dp"
	           	android:layout_centerVertical="true"
	           	android:layout_toRightOf="@id/icon_location"
	           	android:layout_marginLeft="14dp"
	           	android:id="@+id/store_address"/>                
	    </RelativeLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="#FFFFFF"
	    android:descendantFocusability="blocksDescendants" >
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal"
	        android:background="#FFFFFF">
	         <ImageView 
			    android:layout_width="20dp"
			    android:layout_height="20dp"
			    android:src="@drawable/nav_icon_homepage"
			    android:layout_centerVertical="true"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="14dp"
			    android:id="@+id/home"/>
			 <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:id="@+id/store_name"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="15dp"
	                android:textColor="#000000"
	                android:gravity="center_vertical"
	                android:layout_toRightOf="@id/home" />
	    </RelativeLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#E8E8E8"
	        android:id="@+id/store_check_order_line"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="14dp"
	        android:orientation="horizontal"
	        android:id="@+id/order_detail"
	        android:visibility="gone">
			 <TextView 
			     android:layout_width="0dp"
			     android:layout_height="wrap_content"
			     android:text="@string/store_my_order_number"
			     android:layout_gravity="center_vertical"
			     android:textColor="#000000"
			     android:layout_weight="1"
			     android:textSize="13dp"
			     android:id="@+id/store_my_order_number"/>
			 <TextView 
			     android:layout_width="0dp"
			     android:layout_height="wrap_content"
			     android:text="@string/store_my_order_time"
			     android:layout_gravity="center_vertical"
			     android:textColor="#000000"
			     android:id="@+id/store_my_order_time"
			     android:layout_weight="1"
			     android:textSize="13dp"/>
	        
	    </LinearLayout>
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#F5F5F5"/>
	    <ListView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:listSelector="@null"
	        android:id="@+id/store_order_detail_list"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dp">
	        <TextView 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="@string/store_freight"
			     android:layout_gravity="center_vertical"
			     android:textColor="#000000"
			     android:textSize="13dp"
			     android:layout_centerVertical="true"
			     android:layout_marginLeft="14dp"/>
			 <TextView 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="￥"
			     android:layout_gravity="center_vertical"
			     android:textColor="#DD514F"
			     android:textSize="13dp"
			     android:id="@+id/store_my_order_sum"
			     android:layout_centerVertical="true"
			     android:layout_alignParentRight="true"
			     android:layout_marginRight="14dp"/>
	    </RelativeLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#E8E8E8"
	        android:layout_marginRight="14dp"
	        android:layout_marginLeft="14dp"/>
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:id="@+id/store_send_goods"
	        android:clickable="true"
	        android:focusable="true"
	        android:focusableInTouchMode="true">
	        <TextView 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="@string/store_shopping_method"
			     android:layout_gravity="center_vertical"
			     android:textColor="#000000"
			     android:textSize="13dp"
			     android:layout_centerVertical="true"
			     android:layout_marginLeft="14dp"
			     android:clickable="false"
		         android:focusable="false"
		         android:focusableInTouchMode="false"/>
			 <ImageView 
			     android:layout_width="13dp"
			     android:layout_height="13dp"
			     android:src="@drawable/arrow"
			     android:layout_alignParentRight="true"
			     android:layout_centerVertical="true"
			     android:id="@+id/arrow"
			     android:layout_marginRight="14dp"
			     android:visibility="gone"/>
			 <TextView 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="@string/store_shopping_delivery"
			     android:layout_gravity="center_vertical"
			     android:textColor="#000000"
			     android:textSize="13dp"
			     android:layout_centerVertical="true"
			     android:layout_alignParentRight="true"
			     android:layout_toLeftOf="@id/arrow"
			     android:layout_marginRight="14dp"
			     android:clickable="false"
		         android:focusable="false"
		         android:focusableInTouchMode="false"/>
	    </RelativeLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#E8E8E8"
	        android:layout_marginRight="14dp"
	        android:layout_marginLeft="14dp"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginRight="14dp"
	        android:orientation="horizontal"
	        android:gravity="right">
			 <TextView 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_gravity="center_vertical"
			     android:textColor="#000000"
			     android:textSize="13dp"
			     android:id="@+id/store_my_order_count"		     
			     android:layout_marginRight="5dp"/>
			 <TextView 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:text="@string/store_total"
			     android:layout_gravity="center_vertical"
			     android:textColor="#000000"
			     android:textSize="13dp"     
			     android:layout_marginRight="5dp"/>
			 <TextView 
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_gravity="center_vertical"
			     android:textColor="#DD514F"
			     android:textSize="13dp"
			     android:id="@+id/store_my_order_count_sum"/>
	    </LinearLayout>

</LinearLayout>
    

</LinearLayout>
