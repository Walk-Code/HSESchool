<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/shape_store_car_hint"
    android:id="@+id/store_car_hints"
    android:layout_gravity="center">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center" >
	    <ImageView
	        android:layout_width="18dp"
	        android:layout_height="39dp"
	        android:src="@drawable/icon_pay_succeed"
	        android:layout_centerInParent="true"   
	        android:id="@+id/icon_pay_succeed"
	        android:layout_marginRight="9dp"
	        android:visibility="gone"/>	    <TextView 
	        android:layout_width="wrap_content"    	
	        android:layout_height="wrap_content"
	        android:textSize="18dp"
	        android:textColor="#FFFFFF"   
	        android:text="@string/store_care_hint"
	        android:id="@+id/store_car_hint"/>
	</LinearLayout>
</RelativeLayout>
