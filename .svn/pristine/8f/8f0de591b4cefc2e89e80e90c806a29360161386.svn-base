<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_normal"
    android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:background="#fafafa"
   	android:orientation="vertical"
   	android:layout_gravity="bottom|center_horizontal">
   	<View
        android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#d5d5d5"/>
   	<RelativeLayout
        android:id="@+id/custom_bottomlayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="7dp">
   	    <TextView
		    android:id="@+id/custom_sendview"
		    android:layout_width="70dp"
			android:layout_height="30dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="3dp"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:clickable="true"
			android:onClick="onSendClick"
			android:gravity="center"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:textSize="16dp"
			android:textColor="#2d2d2d"
			android:background="@drawable/send_bg_gray"
			android:text="@string/publish"/>
   	    <View
	        android:id="@+id/custom_emojiview"
	        android:layout_toLeftOf="@id/custom_sendview"
	        android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:background="@drawable/btn_expression"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="5dp"
		    android:layout_centerVertical="true"/>
   	    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@id/custom_emojiview"
		    android:background="@drawable/inputbox">
		    <View
		        android:layout_width="0dp"
			    android:layout_height="0dp"
			    android:focusable="true"
			    android:focusableInTouchMode="true"/>
		   <EditText
		        android:id="@+id/custom_edittext"
		        android:background="#00000000"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:padding="5dp"
		    	android:maxHeight="100dp"
		    	android:singleLine="false"
		    	android:textSize="16dp"
		    	android:textColor="#444444"
		    	android:textColorHint="#c3c3c3"
		    	android:hint="@string/customcomment_hint"
		    	android:gravity="left|center_vertical"/>
		</RelativeLayout>
   	</RelativeLayout>
   	<LinearLayout
   	    android:id="@+id/custom_emoji_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="180dp"
	    android:visibility="gone"
	    android:orientation="vertical" >
		<fragment
	        android:id="@+id/emoji_fragment"
	        android:name="com.layout.emoji.EmojiFragment"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>
