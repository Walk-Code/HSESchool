<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#DD514F" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#DD514F"
        android:text="@string/add_address"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/store_add_address"/>
 	<LinearLayout 
 	    android:layout_width="0dp"
 	    android:layout_height="112dp"
 	    android:orientation="vertical"
 	    android:layout_weight="9"
 	    android:layout_gravity="center_vertical"
 	    android:visibility="gone"
 	    android:id="@+id/store_order_layout"
 	    android:gravity="center_vertical"> 
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="14dp">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:text="收货人:"
	            android:textSize="16dp"
	            android:layout_centerVertical="true"
	            android:gravity="center"
	            android:id="@+id/store_consignee"/>
	         <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:text="132"
	            android:textSize="16dp"
	           	android:layout_alignParentRight="true"
	           	android:layout_centerVertical="true"
	           	android:id="@+id/store_consignee_phone"/>                
	    </RelativeLayout>
		<RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="14dp"
	        android:layout_marginRight="14dp"
	        android:layout_marginTop="20dp"
	        android:layout_gravity="center_vertical">
	        <ImageView
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:textColor="#FFFFFF"
	            android:src="@drawable/icon_location"
	            android:layout_centerVertical="true"
	            android:gravity="center"
	            android:id="@+id/icon_location"/>
	         <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:text="132"
	            android:textSize="16dp"
	           	android:layout_centerVertical="true"
	           	android:layout_toRightOf="@id/icon_location"
	           	android:layout_marginLeft="14dp"
	           	android:id="@+id/store_address"/>                
	    </RelativeLayout>
	</LinearLayout>
	<ImageView 
	    android:layout_width="0dp"
	    android:layout_height="12dp"
	    android:layout_weight="1"
	    android:src="@drawable/arrow"
	    android:layout_gravity="center_vertical"
	    android:visibility="gone"
	    android:id="@+id/store_order_arrow"/> 	
</LinearLayout>
