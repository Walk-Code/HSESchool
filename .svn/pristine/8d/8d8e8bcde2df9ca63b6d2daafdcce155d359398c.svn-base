<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_gray_selector">
    
    <FrameLayout
        android:id="@+id/icolayout"
	    android:layout_width="45dp"
		android:layout_height="50dp"
		android:layout_marginTop="20dp"
		android:visibility="gone">
        <View
	        android:id="@+id/ico_option"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginRight="5dp"
	        android:layout_gravity="right|center_vertical"
	        android:background="@drawable/list_option_no"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/imageviewlayout"
	    android:layout_toRightOf="@id/icolayout"
	    android:layout_width="75dp"
		android:layout_height="75dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="15dp">
	    <ImageView
		    android:id="@+id/imageview"
		    android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:contentDescription="@string/app_name"
			android:scaleType="centerCrop"/>
		<TextView
		    android:id="@+id/textview_imagecount"
		    android:layout_width="wrap_content"
			android:layout_height="25dp"
			android:minWidth="25dp"
			android:textColor="#ffffff"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:gravity="center"
			android:textSize="12dp"
			android:visibility="gone"
			android:layout_gravity="right|bottom"
			android:background="#90000000"/>
	</FrameLayout>
    
    <TextView 
   	    android:id="@+id/textview_title"
   	    android:layout_toRightOf="@id/imageviewlayout"
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content" 
   		android:layout_marginTop="10dp"
   		android:layout_marginRight="5dp"
   		android:singleLine="true"
   		android:ellipsize="end"
   		android:textSize="16dp"
   		android:gravity="left|top"
   		android:textColor="#313131"/>
    
    <!-- <TextView 
   	    android:id="@+id/textview_desc"
   	    android:layout_toRightOf="@id/imageviewlayout"
   	    android:layout_below="@id/textview_title"
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content" 
   		android:layout_marginTop="5dp"
   		android:layout_marginRight="5dp"
   		android:textSize="13dp"
   		android:lines="2"
   		android:ellipsize="end"
   		android:gravity="left|center_vertical"
   		android:textColor="#7c7c7c"/> -->
    
    <com.layout.emoji.EmojiTextView
         android:id="@+id/textview_desc"
   	    android:layout_toRightOf="@id/imageviewlayout"
   	    android:layout_below="@id/textview_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
   		android:layout_marginRight="5dp"
   		android:layout_marginBottom="10dp"
   		android:textSize="13dp"
   		android:lines="2"
   		android:ellipsize="end"
   		android:gravity="left|top"
   		android:textColor="#7c7c7c"/>
	
    <RelativeLayout
        android:id="@+id/group_date"
        android:layout_toRightOf="@id/imageviewlayout"
	   	android:layout_below="@id/textview_desc"
	    android:layout_width="match_parent"
	    android:layout_height="19dp">
	    <View
	        android:id="@+id/view_date"
	        android:layout_width="16dp"
	        android:layout_height="16dp"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/ico_clock"/>
	    
	    <TextView 
	   	    android:id="@+id/textview_date"
	   	    android:layout_toRightOf="@id/view_date"
	   	    android:layout_width="wrap_content"
	   		android:layout_height="match_parent" 
	   		android:singleLine="true"
	   		android:ellipsize="end"
	   		android:textSize="13dp"
	   		android:gravity="left|center_vertical"
	   		android:textColor="#7c7c7c"/>
	    
	    <TextView 
	   	    android:id="@+id/textview_readcount"
	   	    android:layout_width="45dp"
	   		android:layout_height="match_parent"
	   		android:layout_alignParentRight="true"
	   		android:singleLine="true"
	   		android:textSize="13dp"
	   		android:gravity="left|center_vertical"
	   		android:textColor="#999999"/>
	    <View
	        android:id="@+id/view_readcount"
	        android:layout_toLeftOf="@id/textview_readcount"
	        android:layout_width="16dp"
	        android:layout_height="16dp"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/ico_readcount"/>
	    
	    <TextView 
	   	    android:id="@+id/textview_commentcount"
	   	    android:layout_toLeftOf="@id/view_readcount"
	   	    android:layout_width="45dp"
	   		android:layout_height="match_parent"
	   		android:singleLine="true"
	   		android:textSize="13dp"
	   		android:gravity="left|center_vertical"
	   		android:textColor="#999999"/>
	    <View
	        android:id="@+id/view_commentcount"
	        android:layout_toLeftOf="@id/textview_commentcount"
	        android:layout_width="16dp"
	        android:layout_height="16dp"
	        android:layout_marginRight="5dp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/ico_postcomment"/>
    </RelativeLayout>
    
    <View
        android:layout_below="@id/group_date"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#e1e1e1"/>
</RelativeLayout>
