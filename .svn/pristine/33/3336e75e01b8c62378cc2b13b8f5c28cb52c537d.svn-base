<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
   <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="#FFFFFF"
	    android:orientation="horizontal"
	    android:layout_margin="5dp"
	    android:gravity="center_vertical" >
	    <TextView 
	        android:id="@+id/store_comment_author" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#EE82EE"
	        android:textSize="18dp"
	        android:layout_marginRight="5dp"
	        android:text="1"/>
	    <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="#FFFFFF"
		    android:orientation="horizontal"
		    android:id="@+id/store_comment_layout"
		    android:gravity="center_vertical" />
  
    </LinearLayout>
    
    <TextView 
        android:id="@+id/store_goods_coommen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:maxLines="5"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="1"/>
    
    <LinearLayout 
        android:id="@+id/store_goods_coommen_photos"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="#FFFFFF"
	    android:orientation="horizontal"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp" >
	    
   </LinearLayout>
   
	<TextView 
	    android:id="@+id/store_goods_coomment_creattime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#d5d5d5"
        android:maxLines="5"
        android:layout_margin="5dp"
        android:text="1"/>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="#D5D5D5"
	    android:layout_marginTop="5dp"/>
    
</LinearLayout>
