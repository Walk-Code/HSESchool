<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#C2C2C2" />
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="90dp" >
	
	        <ImageView
	            android:id="@+id/user_avator"
	            android:layout_width="75dp"
	            android:layout_height="75dp"
	            android:layout_margin="8dp"
	            android:contentDescription="@string/app_name"
	            android:scaleType="centerCrop" />
	
	        <TextView
	            android:id="@+id/user_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="20dp"
	            android:layout_toRightOf="@+id/user_avator"
	            android:textColor="#000000"
	            android:textSize="16dp" />
	
	        <TextView
	            android:id="@+id/user_gender"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/user_name"
	            android:layout_marginLeft="5dp"
	            android:layout_marginTop="8dp"
	            android:layout_toRightOf="@+id/user_avator"
	            android:textColor="#8C8A8F"
	            android:textSize="16dp" />
	
	        <TextView
	            android:id="@+id/user_class"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/user_name"
	            android:layout_marginLeft="15dp"
	            android:layout_marginTop="8dp"
	            android:layout_toRightOf="@+id/user_gender"
	            android:textColor="#8C8A8F"
	            android:textSize="16dp" />
	
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="0.5dp"
	            android:layout_alignParentBottom="true"
	            android:background="#C2C2C2" />
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="44dp"
	        android:background="#FFFFFF" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:text="@string/personal_page_phone"
	            android:textColor="#000000"
	            android:textSize="16dp" />
	
	        <TextView
	            android:id="@+id/user_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="98dp"
	            android:textColor="#8C8A8F"
	            android:textSize="16dp" />
	
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="0.5dp"
	            android:layout_alignParentBottom="true"
	            android:background="#C2C2C2" />
	    </RelativeLayout>
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="44dp"
	        android:background="#FFFFFF" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:text="@string/personal_page_email"
	            android:textColor="#000000"
	            android:textSize="16dp" />
	
	        <TextView
	            android:id="@+id/user_email"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="98dp"
	            android:textColor="#8C8A8F"
	            android:textSize="16dp" />
	
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="0.5dp"
	            android:layout_alignParentBottom="true"
	            android:background="#C2C2C2" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="12dp"
	        android:background="#FFFFFF" >
	
	        <TextView
	            android:id="@+id/user_area"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:text="@string/personal_page_address"
	            android:textColor="#000000"
	            android:gravity="left|top"
	            android:textSize="16dp" />
	
	        <TextView
	            android:id="@+id/user_address"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="98dp"
	            android:textColor="#8C8A8F"
	            android:gravity="left|top"
	            android:textSize="16dp" />
	
	        <View
	            android:layout_below="@id/user_address"
	            android:layout_width="match_parent"
	            android:layout_height="0.5dp"
	            android:layout_marginTop="12dp"
	            android:background="#C2C2C2" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="12dp"
	        android:background="#FFFFFF" >
	
	        <TextView
	            android:id="@+id/text_signture"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:text="@string/personal_page_signture2"
	            android:textColor="#000000"
	            android:textSize="16dp" />
	
	        <TextView
	            android:id="@+id/user_signature"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="98dp"
	            android:gravity="center_vertical"
	            android:textColor="#8C8A8F"
	            android:textSize="16dp" />
	
	        <View
	            android:layout_below="@id/user_signature"
	            android:layout_width="match_parent"
	            android:layout_height="0.5dp"
	            android:layout_marginTop="12dp"
	            android:background="#C2C2C2" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#FFFFFF" >
	
	        <TextView
	            android:id="@+id/personal_page_photoalbum"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="10dp"
	            android:text="@string/personal_page_photoalbum"
	            android:textColor="#000000"
	            android:textSize="16dp" />
	
	        <GridView
	            android:id="@+id/photo_album"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="85dp"
	            android:layout_marginRight="5dp"
	            android:layout_marginTop="15dp"
	            android:paddingBottom="15dp"
	            android:layout_toLeftOf="@+id/list_arrow"
	            android:clickable="false"
	            android:focusable="false"
	            android:horizontalSpacing="6dp"
	            android:numColumns="4" />
	
	        <View
	            android:id="@+id/list_arrow"
	            android:layout_width="10dp"
	            android:layout_height="19dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:background="@drawable/list_arrow" />
	
	        <View
	            android:id="@+id/photo_album_layout"
	            android:layout_width="match_parent"
	            android:layout_height="80dp"
	            android:background="#00000000" />
	    </RelativeLayout>
	
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#C2C2C2" />
	
	    <TextView
	        android:id="@+id/btn_send_msg"
	        android:layout_width="match_parent"
	        android:layout_height="42dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/btn_green_selector"
	        android:gravity="center"
	        android:text="@string/personal_page_send_msg"
	        android:textColor="#ffffff"
	        android:textSize="16dp"
	        android:visibility="gone" />
	
	    <TextView
	        android:id="@+id/btn_add_friend"
	        android:layout_width="match_parent"
	        android:layout_height="42dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="10dp"
	        android:visibility="gone"
	        android:background="@drawable/btn_green_selector"
	        android:gravity="center"
	        android:text="@string/personal_page_add_friend"
	        android:textColor="#ffffff"
	        android:textSize="16dp" />
	
	    <TextView
	        android:id="@+id/btn_atten_friend"
	        android:layout_width="match_parent"
	        android:layout_height="42dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/btn_atten_friend_selector"
	        android:gravity="center"
	        android:visibility="gone"
	        android:text="@string/personal_page_atten_friend"
	        android:textColor="#000000"
	        android:textSize="16dp" />
	
	</LinearLayout>
</ScrollView>