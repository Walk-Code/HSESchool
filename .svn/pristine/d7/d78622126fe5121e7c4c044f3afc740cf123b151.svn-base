<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg_white_gray_selector">
    
    <FrameLayout
        android:id="@+id/icolayout"
	    android:layout_width="45dp"
		android:layout_height="50dp"
		android:layout_marginTop="20dp"
		android:visibility="gone">
        <View
	        android:id="@+id/ico_option"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginRight="5dp"
	        android:layout_gravity="right|center_vertical"
	        android:background="@drawable/list_option_no"/>
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/m_linear_layout"
        android:layout_toRightOf="@id/icolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
        android:id="@+id/image_beautyhs_schoolyard"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:scaleType="centerCrop"
        />
    
    <LinearLayout 
        android:id="@+id/entity_beautyhs_schoolyard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_beautyhs_schoolyard"
        android:layout_marginTop="8dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/title_beautyhs_schoolyard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#121212"
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="true"
            android:gravity="left|center_vertical"
            />
        
        <TextView 
            android:id="@+id/content_beautyhs_schoolyard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
			android:textColor="#7e7e7e"
			android:gravity="left"
            />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >
            <TextView
                android:id="@+id/date_beautyhs_schoolyard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
   				android:singleLine="true"
   				android:ellipsize="end"
   				android:textSize="13dp"
   				android:gravity="left|center_vertical"
   				android:textColor="#7c7c7c"/>
            
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    
    
    <View 
        android:layout_below="@+id/m_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#B9B9B9"
        android:layout_marginTop="6dp"
        />

</RelativeLayout>
