<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#cccccc" />

    <ImageView
        android:id="@+id/app_ico"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/app_ico" />

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_ico"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="V1.1"
        android:textColor="#5E5E5E"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_text"
            android:textColor="#999999"
            android:layout_margin="10dp"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="5dp"
            android:background="#cccccc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_statement"
            android:textColor="#A1A1A1"
            android:textSize="16dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:background="#A1A1A1" />

        <TextView
            android:id="@+id/btn_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_clause"
            android:textColor="#A1A1A1"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>