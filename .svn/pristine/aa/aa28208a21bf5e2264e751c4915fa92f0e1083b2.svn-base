<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="#FFFFFF" >
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="9">
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/receiving_layout">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18dp"
	            android:id="@+id/receiving_name"
	            android:layout_alignParentLeft="true"
	            android:textColor="#000000"
	            android:layout_marginLeft="10dp"
	            android:textStyle="bold"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18dp"
	            android:id="@+id/receiving_phone"
				android:layout_alignParentRight="true"
	            android:textColor="#000000"
	            android:gravity="right"/>
	        
	    </RelativeLayout>
	     <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18dp"
	            android:layout_alignParentLeft="true"
	            android:text="@string/address_default"
	            android:id="@+id/address_default"
	            android:textColor="#DD514F"
	            android:layout_marginLeft="10dp"
	            android:visibility="gone"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="16dp"
	            android:id="@+id/receiving_address"
	            android:layout_alignParentLeft="true"
	            android:textColor="#000000"
	            android:layout_marginLeft="10dp"/>
	        
	    </LinearLayout>
	  </LinearLayout>
	 <LinearLayout 
	     android:layout_width="0dp"
	     android:layout_height="wrap_content"
	     android:layout_weight="2"
	     android:gravity="center"
	     android:layout_gravity="center_vertical">
		<ImageView 
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:src="@drawable/icon_indent_option"
		    android:gravity="center"
		    android:visibility="gone"
		    android:id="@+id/store_address_checked"/>
	</LinearLayout>  
</LinearLayout>
