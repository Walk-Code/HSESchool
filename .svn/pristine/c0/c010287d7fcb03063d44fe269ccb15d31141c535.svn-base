<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e7e7e7">
    
    <EditText
        android:id="@+id/editview_name"
        android:layout_width="match_parent"
    	android:layout_height="45dp"
    	android:background="@drawable/bg_loginlayout"
    	android:layout_margin="15dp"
    	android:paddingLeft="5dp"
    	android:paddingRight="5dp"
    	android:singleLine="true"
    	android:textSize="15dp"
    	android:textColor="#282828"
    	android:textColorHint="#c0c0c0"
    	android:hint="@string/login_welcome_hint1"/>
    
    <EditText
        android:id="@+id/editview_card"
        android:layout_width="match_parent"
    	android:layout_height="45dp"
    	android:background="@drawable/bg_loginlayout"
    	android:layout_marginLeft="15dp"
    	android:layout_marginRight="15dp"
    	android:layout_marginBottom="15dp"
    	android:paddingLeft="5dp"
    	android:paddingRight="5dp"
    	android:singleLine="true"
    	android:textSize="15dp"
    	android:textColor="#282828"
    	android:textColorHint="#c0c0c0"
    	android:hint="@string/login_welcome_hint2"/>
    
    <TextView 
   	    android:id="@+id/textview_next"
   	    android:layout_width="match_parent"
   		android:layout_height="40dp" 
   		android:layout_marginLeft="15dp"
   		android:layout_marginRight="15dp"
   		android:textSize="17dp"
   		android:textColor="#ffffff"
   		android:text="@string/next"
   		android:background="@drawable/btn_red_button_selector"
   		android:clickable="true"
   		android:onClick="onTipBtnClick"
   		android:gravity="center"/>
    
    <TextView 
   	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content" 
   		android:layout_marginLeft="15dp"
   		android:layout_marginRight="15dp"
   		android:layout_marginTop="25dp"
   		android:layout_marginBottom="5dp"
   		android:textSize="17dp"
   		android:textColor="#a8a8a8"
   		android:text="@string/passwordfind_hint1"
   		android:gravity="center"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#bfbfbf"/>
    
    <TextView 
   	    android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:padding="15dp"
   		android:textSize="14dp"
   		android:textColor="#a7a7a7"
   		android:text="@string/passwordfind_hint2"
   		android:background="#ffffff"
   		android:lineSpacingExtra="3dp"
   		android:gravity="left|center_vertical"/>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#bfbfbf"/>

</LinearLayout>
