<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">
    <FrameLayout
        android:id="@+id/icolayout"
	    android:layout_width="50dp"
	    android:visibility="gone"
	    android:layout_height="match_parent">
        <View
            android:id="@+id/ico_option" 
	        android:layout_width="22dp"
	        android:layout_height="22dp"
	        android:layout_gravity="center"
	        android:background="@drawable/list_option_no"/>
    </FrameLayout>
    <FrameLayout
        android:layout_toRightOf="@id/icolayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="6dp">
        <ImageView
		    android:id="@+id/imageview"
		    android:layout_width="match_parent"
	   		android:layout_height="match_parent"
	    	android:scaleType="centerCrop"
	    	android:layout_gravity="center"
	    	android:contentDescription="@string/app_name"
	    	android:background="#b0000000"/>
        
        <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="28dp"
		    android:background="#80000000"
		    android:layout_gravity="bottom">
	        <TextView
	            android:id="@+id/textview_count"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:layout_marginLeft="5dp"
	            android:gravity="center"
	            android:textColor="#ffffff"
	            android:textSize="15dp"/>
	        
	        <View
	            android:id="@+id/ico" 
	            android:layout_toLeftOf="@id/textview_count"
		        android:layout_width="15dp"
		        android:layout_height="14dp"
		        android:layout_centerVertical="true"
		        android:background="@drawable/myclassmate_icon_head"/>
	        
	        <TextView
	            android:id="@+id/textview_title"
	            android:layout_toLeftOf="@id/ico"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="left|center_vertical"
	            android:singleLine="true"
	            android:ellipsize="end"
	            android:paddingLeft="15dp"
	            android:paddingRight="5dp"
	            android:textColor="#ffffff"
	            android:textSize="15dp"/>
	    </RelativeLayout>
	</FrameLayout>
</RelativeLayout>
