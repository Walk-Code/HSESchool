<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/publish_recruit_job_desc"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:hint="请输入招聘岗位描述"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp" >

            <Spinner
                android:id="@+id/publish_recruit_job_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_activity_goods_release_title"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/publish_recruit_job_number"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/bg_activity_goods_release_title"
                android:ems="10"
                android:hint="招聘人数"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/publish_recruit_job_salary"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:hint="请输入薪资"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/publish_recruit_job_requirements"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:gravity="top|left"
            android:hint="请输入岗位要求"
            android:padding="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/publish_recruit_job_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:gravity="top|left"
            android:hint="请输入工作内容"
            android:padding="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/publish_recruit_job_contact"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:hint="请输入联系人"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/publish_recruit_job_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:hint="请输入联系方式"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/publish_recruit_job_time"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:hint="请输入上班时间"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/publish_recruit_job_address"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_activity_goods_release_title"
            android:ems="10"
            android:hint="请输入上班地点"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <Button
            android:id="@+id/publish_recruit_btn_send"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_red_button_selector"
            android:onClick="onPublishClick"
            android:text="@string/activitysecendhand_lost_title_right"
            android:textColor="#FFF" />
    </LinearLayout>

</ScrollView>