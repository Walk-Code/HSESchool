<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_gray_selector">
    
	<TextView 
	    android:id="@+id/search_firends_classes"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#4c4c4c"
	    android:textSize="16dp"
	    android:layout_marginLeft="22dp"
	    android:layout_centerVertical="true"
	    />
	
	<TextView 
	    android:id="@+id/search_firends_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14dp"
	    android:textColor="#9e9e9e"
	    android:layout_toRightOf="@+id/search_firends_classes"
	    android:layout_marginLeft="18dp"
	    android:layout_centerVertical="true"
	    />
	
	<ImageView 
	    android:id="@+id/search_firends_arrow"
	    android:layout_width="6dp"
	    android:layout_height="12dp"
	    android:background="@drawable/list_arrow"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="16dp"
	    />
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#e4e4e4"
	    android:layout_alignParentBottom="true"
	    />
</RelativeLayout>
