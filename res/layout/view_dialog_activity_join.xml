<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_loginlayout">
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/activitydetails_dialog_title"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="#e44944" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"/>
    
    <TextView
        android:id="@+id/textview_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        android:gravity="left"
        android:textColor="#5e5e5e" />
    
    <LinearLayout
        android:id="@+id/group_check"
	    android:layout_width="match_parent"
	    android:layout_height="18dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginBottom="15dp"
	    android:orientation="horizontal">
        <View
            android:id="@+id/view_check"
	        android:layout_width="16dp"
	        android:layout_height="16dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/list_red_option_tick"/>
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dp"
	        android:text="@string/activitydetails_dialog_notify"
	        android:textSize="15dp"
	        android:gravity="center"
	        android:textColor="#838383" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"/>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_close"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="@string/close"
	        android:textSize="15dp"
	        android:gravity="center"
	        android:textColor="#1979f4" />
        <View
	        android:layout_width="0.5dp"
	        android:layout_height="match_parent"
	        android:background="#dddddd"/>
        <TextView
            android:id="@+id/btn_confirm"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="@string/activitydetails_dialog_confirm"
	        android:textSize="15dp"
	        android:gravity="center"
	        android:textColor="#1979f4" />
    </LinearLayout>
</LinearLayout>
