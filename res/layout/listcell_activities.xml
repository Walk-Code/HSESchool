<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_gray_selector">
    <FrameLayout
        android:id="@+id/icolayout"
	    android:layout_width="45dp"
		android:layout_height="50dp"
		android:layout_marginTop="20dp"
		android:visibility="gone">
        <View
	        android:id="@+id/ico_option"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_marginRight="5dp"
	        android:layout_gravity="right|center_vertical"
	        android:background="@drawable/list_option_no"/>
    </FrameLayout>
    
    <RelativeLayout
        android:id="@+id/group_content"
        android:layout_toRightOf="@id/icolayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <TextView
		    android:id="@+id/textview_title"
		    android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#2f2f2f"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="10dp"
			android:gravity="left"
			android:textSize="17dp"/>
        <RelativeLayout
            android:id="@+id/group_addresstime"
	        android:layout_below="@id/textview_title"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="8dp"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="10dp">
            <TextView
			    android:id="@+id/textview_addresstime"
			    android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#7e7e7e"
				android:lineSpacingExtra="5dp"
				android:gravity="left"
				android:textSize="14dp"/>
            <TextView
			    android:id="@+id/textview_statu"
			    android:layout_width="75dp"
				android:layout_height="30dp"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:textColor="#df4e51"
				android:gravity="center"
				android:textSize="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/group_date"
	        android:layout_below="@id/group_addresstime"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="10dp">
            <TextView
			    android:id="@+id/textview_date"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:textColor="#7e7e7e"
				android:gravity="left"
				android:visibility="gone"
				android:textSize="13dp"/>
            <TextView
			    android:id="@+id/textview_personcount"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:textColor="#7e7e7e"
				android:gravity="left"
				android:textSize="13dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/group_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical"
	    android:layout_marginTop="10dp">
           <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#bebebe"/>
        <View
	        android:layout_width="match_parent"
	        android:layout_height="6dp"
	        android:background="#f0f0f0"/>
        <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#bebebe"/>
       </LinearLayout>

</RelativeLayout>
