<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_gray_selector"
     >
    
    <LinearLayout 
        android:id="@+id/sign_titile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <View
		android:id="@+id/sign_unread"    
		android:layout_width="8dp"
		android:layout_height="8dp"
		android:background="@drawable/inform_unread"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="8dp"
		android:layout_gravity="center_vertical"
	    />
	
	<TextView 
	    android:id="@+id/announcement_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#313131"
	    android:textSize="16dp"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:layout_marginRight="25dp"
	    android:layout_gravity="left|center_vertical"
	    />
    </LinearLayout>
	
	
	<TextView 
	    android:id="@+id/announcement_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="15dp"
	    android:textColor="#878787"
	    android:lines="2"
	    android:ellipsize="end"
	    android:gravity="left"
	    android:layout_marginLeft="30dp"
	    android:layout_below="@+id/sign_titile_layout"
	    android:layout_marginTop="4dp"
	    android:layout_marginRight="10dp"
	    />
	
	<TextView 
	    android:id="@+id/announcement_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="13dp"
	    android:textColor="#878787"
	    android:layout_marginLeft="30dp"
	    android:layout_marginTop="4dp"
	    android:layout_below="@+id/announcement_content"
	    />
	
	<LinearLayout 
	    android:id="@+id/comment_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/announcement_content"
	    android:layout_marginTop="4dp"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="13dp"
	    android:orientation="horizontal"
	    android:visibility="gone"
	    >
	    
	    <View
	    	android:id="@+id/icon_comment"
	    	android:layout_width="14dp"
	    	android:layout_height="14dp"
			android:layout_marginRight="6dp"
			android:layout_gravity="center_vertical"
			android:background="@drawable/inform_icon_comment"
	    />
	
		<TextView
			android:id="@+id/num_comment"    
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="13dp"
			android:textColor="#878787"
			android:layout_gravity="center_vertical"
	    />
	
		<TextView 
	 	  android:id="@+id/comment"
	  	  android:layout_width="wrap_content"
	  	  android:layout_height="wrap_content"
	  	  android:text="@string/text_comment"
	   	  android:textSize="13dp"
	   	  android:textColor="#878787"
	    />
	</LinearLayout>
	
	
	<ImageView 
	    android:id="@+id/icon_urgent_announcement"
	    android:layout_width="40dp"
	    android:layout_height="41dp"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/inform_tab_jjtz"
	    android:visibility="gone"
	    />
	
	<View
	    android:layout_below="@id/announcement_time"
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#B9B9B9"
	    android:layout_marginTop="10dp"
	    />
	
</RelativeLayout>
