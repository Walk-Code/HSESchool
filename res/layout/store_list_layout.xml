<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/masklayer_bg">

    <ImageView
        android:id="@+id/good_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/previewpic" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/good_image"
        android:gravity="top"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="#000000"
        android:textSize="15dp" />

    <RelativeLayout android:id="@+id/price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_details"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/good_image" >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="#DD514F"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_mark_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_price"
            android:layout_centerVertical="true"
            android:textColor="#ACACAC"
            android:textSize="12dp" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_layout"
        android:layout_toRightOf="@id/good_image"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="#8F8F90"
        android:textSize="12dp" />
    
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_layout"
        android:layout_toRightOf="@id/tv_stock"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="#8F8F90"
        android:textSize="12dp" />

    <View android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#e5e5e5"
        android:visibility="invisible"/>

</RelativeLayout>