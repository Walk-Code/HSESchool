<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff"
    >
    
    <TextView 
        android:id="@+id/enter_school_question_online_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/question_online_button"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@drawable/bg_button_add_firends_selector"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="onClickOnlineButton"
        />
    
    <include 
        android:id="@+id/enter_school_listview"
        layout="@layout/pulltolistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/enter_school_question_online_button"
        />
    
</RelativeLayout>
