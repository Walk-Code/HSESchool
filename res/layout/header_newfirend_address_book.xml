<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <LinearLayout 
	    android:id="@+id/new_firends"
	    android:layout_width="match_parent"
	    android:layout_height="52dp"
	    android:orientation="horizontal"
	    android:background="@drawable/bg_white_gray_selector"
	    >
	    
	    <ImageView
	        android:id="@+id/new_firend_image"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:background="@drawable/myfriend_icon"
	        android:layout_marginLeft="12dp"
	        android:layout_marginTop="4dp"
	        android:layout_marginBottom="4dp"
	        android:layout_marginRight="16dp"
	        />
	    
	    <TextView
	        android:id="@+id/newfirend_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/new_friends_text"
	        android:textSize="17dp"
	        android:textColor="#2b2b2b"
	        android:layout_gravity="center_vertical"
	        />
	    
	    <View 
	        android:id="@+id/newfirend_state"
	        android:layout_width="7dp"
	        android:layout_height="7dp"
	        android:background="@drawable/red_unread"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="12dp"
	        android:visibility="gone"
	        />
	    
	</LinearLayout>
    
    <TextView
	        android:id="@+id/textview_msgnull"
	        android:layout_width="match_parent"
	        android:layout_height="300dp"
	        android:gravity="center"
	        android:layout_gravity="center"
	        android:textSize="20dp"
	        android:visibility="gone"
	        android:text="@string/msg_null_contact"
	        android:textColor="#888888"/>
    

</LinearLayout>
